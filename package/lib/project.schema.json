{
  "$schema": "https://json-schema.org/draft-07/schema",
  "definitions": {
    "shape": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "enum": [
                "rectangle"
              ]
            },
            "x": {
              "type": "number"
            },
            "y": {
              "type": "number"
            },
            "width": {
              "type": "number"
            },
            "height": {
              "type": "number"
            }
          },
          "required": [
            "type",
            "x",
            "y",
            "width",
            "height"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "enum": [
                "coloredShape"
              ]
            },
            "color": {
              "type": "string"
            },
            "shape": {
              "$ref": "#/definitions/shape"
            }
          },
          "required": [
            "type",
            "color",
            "shape"
          ],
          "additionalProperties": false
        }
      ]
    }
  },
  "type": "object",
  "properties": {
    "timeline": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "start": {
            "type": "number",
            "minimum": 0
          },
          "duration": {
            "type": "number",
            "exclusiveMinimum": 0
          },
          "shape": {
            "$ref": "#/definitions/shape"
          }
        },
        "required": [
          "start",
          "duration",
          "shape"
        ],
        "additionalProperties": false
      },
      "minItems": 1
    }
  },
  "required": [
    "timeline"
  ],
  "additionalProperties": false
}